{
  "version": "3.0.0",
  "useWorkspaces": true,
  "packages": [
    "packages/ui/*",
    "packages/core/*",
    "packages/hooks/*",
    "packages/utils/*",
    "packages/icons/*",
    "scripts/*",
    "docs/*",
    "plugins/*",
    "website/*",
    "examples/*"
  ],
  "stream": true,
  "npmClient": "yarn",
  "registry": "https://registry.npmjs.org/",
  "bootstrap": {
    "npmClientArgs": ["--no-package-lock"]
  },
  "command": {
    "run": {
      "npmClient": "yarn"
    },
    "publish": {
      "allowBranch": "master",
      "message": "chore(release): publish %v"
    }
  }
}
